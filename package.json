{
  "name": "@itechdmv/platform",
  "version": "2.1.0",
  "description": "Open-source government technology platform for rural America",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run clean && npm run server:build && npm run client:build",
    "start": "node dist/server/index.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "docker:build": "docker build -t itechdmv/platform .",
    "docker:run": "docker run -p 3000:3000 itechdmv/platform",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "government",
    "technology",
    "rural",
    "america",
    "cloud",
    "cybersecurity",
    "compliance",
    "open-source",
    "platform"
  ],
  "author": "iTechDMV LLC <info@itechdmv.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/itechdmv/itechdmv-platform.git"
  },
  "bugs": {
    "url": "https://github.com/itechdmv/itechdmv-platform/issues"
  },
  "homepage": "https://itechdmv.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "nodemailer": "^6.9.7",
    "aws-sdk": "^2.1490.0",
    "@azure/msal-node": "^2.6.0",
    "@azure/storage-blob": "^12.17.0",
    "@sendgrid/mail": "^7.7.0",
    "stripe": "^14.5.0",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "csv-parser": "^3.0.0",
    "archiver": "^6.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "canvas": "^2.11.2",
    "socket.io": "^4.7.4",
    "socket.io-redis": "^6.1.1",
    "cron": "^3.1.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "method-override": "^3.0.0",
    "serve-static": "^1.15.0",
    "cookie-parser": "^1.4.6",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/multer": "^1.4.11",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "@types/sanitize-html": "^2.9.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/body-parser": "^1.19.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-jsdoc": "^46.9.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "cross-env": "^7.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
